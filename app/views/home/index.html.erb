<div class="main">

	<div class="container-fluid">
		<div class="buttons">
			<div class="row">
				<div class="category col-md-2 col-md-offset-3"><%=link_to (image_tag "badminton.png", {class:"badminton"}), listings_path(category: 'Badminton' )%> </div>
				<div class="category col-md-2"><%=link_to (image_tag "bbq.png", {class:"bbq"}), listings_path(category: 'BBQ' )%> </div>
			    <div class="category col-md-2"><%=link_to (image_tag "basketball.png", {class:"basketball"}), listings_path(category: 'Basketball' )%> </div>
			</div>

			<br>

			<div class="row">
			    <div class="category col-md-2 col-md-offset-3 "><%=link_to (image_tag "gym.png", {class:"gym"}), listings_path(category: 'GYM' )%> </div>
			    <div class="category col-md-2"><%=link_to (image_tag "swim.png", {class:"swim"}), listings_path(category: 'Swimming Pool' )%> </div>
			    <div class="category col-md-2"><%=link_to (image_tag "tennis.png", {class:"tennis"}), listings_path(category: 'Tennis' )%> </div>
			</div>
		</div>
	</div>
	<div class="button_box2">
		<%= form_tag(listings_path, method: :get, class:"form-wrapper-2 cf") do %>
		  <%= select_tag :city, options_from_collection_for_select(Listing.select(:city).distinct.order(:city),"city","city"), class:"search-select-tab" %>
		  <%= submit_tag 'Search', name: nil, class:"button" %>
		<%end%>
	</div>
</div> 
	
