<%= image_tag current_user.image %>

<div id="wrapper">
  <div id="profile-header">
    <h2>Profile Settings</h>
  </div>
  <!-- <p><%#= image_tag current_user.image %></p> -->
  <div id="profile-settings-main">
    <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>

    <% if current_user.management? %>

    <div class="label-wrap">
      <div class="text-field">
        <p>Property Name: </p>
      </div>
      <div class="form">
        <%= form.text_field :name %>
      </div>
    </div>

    <div class="label-wrap">
      <div class="text-field">
        <p>Manger Name: </p>
      </div>
      <div class="form">
      <%= form.text_field :manager_name %>
      </div>
    </div>

    <div class="label-wrap">
      <div class="text-field">
       <p>Address: </p>
      </div>
      <div class="form">
      <%= form.text_field :address %>
      </div>
    </div>


    <div class="label-wrap">
      <div class="text-field">
        <p>City: </p>
      </div>
      <div class="form">
      <%= form.text_field :city %>
      </div>
    </div>

    <div class="label-wrap">
      <div class="text-field">
        <p>Property Type: </p>
      </div>
      <div class="form">
      <%= form.text_field :property_type %>
    </div>

    <div class="label-wrap">
      <div class="text-field">
        <p>Contact Number: </p>
      </div>
      <div class="form">
      <%= form.telephone_field :contact_number %>
      </div>
    </div>

    <% end %>

    <div class="submit-field">
      <%= form.submit %>
    </div>
    <% end %>
  </div>
</div>

<%= link_to "Home", home_index_path%>